<p id="notice"><%= notice %></p>
<div class="jumbotron">
  
<center>
<h1>Patients</h1>

<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Patients By Lastname", class: "form-control" %></br>
  <%= submit_tag "Search", class: "btn btn-primary" %> 
<% end %>
</br>
</center>

<div class="table-responsive">
<table class="table table-borderless table-hover">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phoneno</th>
      <th>Infection</th>
      <th>Injury</th>
      <th>Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phoneNo %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.observations %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Patient', new_patient_path %>
</div>